<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#ffffd543"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">


            <ImageButton
                android:id="@+id/ib_cpk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/home_change_selector" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/ib_cpk"
                android:layout_toRightOf="@+id/ib_cpk"
                android:text="@string/choose_package"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">


            <ImageButton
                android:id="@+id/ib_cbk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/home_change_selector" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/ib_cbk"
                android:layout_toRightOf="@+id/ib_cbk"
                android:text="@string/choose_book"
                android:textSize="18sp" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="9">

        <TableLayout
            android:id="@+id/home_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:padding="10dp">

                <RelativeLayout
                    android:layout_height="118dp"
                    android:layout_weight="1"

                    >

                    <com.pascalwelsch.holocircularprogressbar.HoloCircularProgressBar
                        android:id="@+id/hcp_listen"
                        android:layout_width="118dp"

                        android:layout_height="118dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:descendantFocusability="beforeDescendants" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="118dp"
                    android:layout_weight="1">

                    <com.pascalwelsch.holocircularprogressbar.HoloCircularProgressBar
                        android:id="@+id/hcp_speak"
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:descendantFocusability="beforeDescendants" />

                </RelativeLayout>
            </TableRow>


            <TableRow android:layout_marginTop="21dp">

                <RelativeLayout
                    android:layout_height="118dp"
                    android:layout_weight="1">

                    <com.pascalwelsch.holocircularprogressbar.HoloCircularProgressBar
                        android:id="@+id/hcp_read"
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:descendantFocusability="beforeDescendants" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="118dp"
                    android:layout_weight="1">

                    <com.pascalwelsch.holocircularprogressbar.HoloCircularProgressBar
                        android:id="@+id/hcp_words"
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:descendantFocusability="beforeDescendants" />

                </RelativeLayout>
            </TableRow>


            <TableRow android:layout_marginTop="21dp">

                <RelativeLayout
                    android:layout_height="118dp"
                    android:layout_weight="1">

                    <com.pascalwelsch.holocircularprogressbar.HoloCircularProgressBar
                        android:id="@+id/hcp_test"
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:descendantFocusability="beforeDescendants" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_height="118dp"
                    android:layout_weight="1">


                </RelativeLayout>
            </TableRow>

        </TableLayout>


    </LinearLayout>


</LinearLayout>


