<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>



    <style name="actionbar_def_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!-- 在样式里面直接替换掉actionbar的背景，避免在有的窗口进入慢时导致进入时显示系统默认的actionbar -->
        <item name="android:background">#13dc98</item>
        <item name= "android:height">48dp</item>
        <!-- 在样式里面去掉acionbar的应用图标和标题 -->
    </style>
    <style name="ActivityTheme_Light" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/actionbar_def_style</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="PhoneTextInput" >
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:inputType">phone</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#a0a0a0</item>
    </style>

    <style name="PasswordTextInput" parent="PhoneTextInput" >
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="GreenButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/login_button_selector</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:background">#e1e1e1</item>
    </style>

</resources>
